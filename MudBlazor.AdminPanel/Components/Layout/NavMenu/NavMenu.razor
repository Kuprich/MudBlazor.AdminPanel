    private NavGropModel generalNavs = new NavGropModel("General", new List<NavItemModel>
    {
        new NavItemModel(Href: "counter", Title: "Counter", Icon: Icons.Material.Filled.Calculate),
        new NavItemModel(Href: "weather", Title: "Wether", Icon: Icons.Material.Filled.WbSunny),
        new NavItemModel(Href: "account/manage", Title: "Manage", Icon: Icons.Material.Filled.ManageAccounts),
    });

    private NavGropModel experimentalNavs = new NavGropModel("Experimental", new List<NavItemModel>
    {
        new NavItemModel(Href: "#1", Title: "Dashboard", Icon: @Icons.Material.Filled.SpaceDashboard, NavItems: new List<NavItemModel>
        {
           new NavItemModel(Href: "#11", Title: "E-Commerce"),
           new NavItemModel(Href: "#12", Title: "Components", NavItems: new List<NavItemModel>
           {
              new NavItemModel(Href: "#121", Title: "AppBar"),
              new NavItemModel(Href: "#121", Title: "Data Grid"),
              new NavItemModel(Href: "#121", Title: "Element"),
              new NavItemModel(Href: "#121", Title: "Icons"),
              new NavItemModel(Href: "#121", Title: "Paper"),
           }), 
        }),
    });

}

