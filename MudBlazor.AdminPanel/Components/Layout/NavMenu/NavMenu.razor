
<MudNavMenu Style="overflow:hidden" Bordered="true" Color="Color.Primary">

    <MudPaper Elevation="0" Class="my-3 ml-5 d-flex flex-row align-center nav-menu__title">
        <img src="img/mud-logo.svg" class="mudblazor-logo mr-3" />
        <MudText Typo="Typo.h6" Class="select-none">Mud Blazor</MudText>
    </MudPaper>

    <NavGroup NavGropModel="generalNavs" />

    <NavGroup NavGropModel="experimentalNavs" />

