
<MudNavMenu Style="overflow:hidden">

    <MudText Typo="Typo.h6" Class="px-4">Admin Panel</MudText>
    <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">Made with MudBalzor</MudText>
    <MudDivider Class="my-2" />

    <MudNavLink Href="counter" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Add">Counter</MudNavLink>
    <MudNavLink Href="weather" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.List">Weather</MudNavLink>
    <MudNavLink Href="auth" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.List">Auth Required</MudNavLink>

    @if (IsDrawerOpen)
    {
        <MudNavGroup Title="Level 0" Icon="@Icons.Material.Filled.Settings">
            <MudNavLink Href="#1" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Add">Item1</MudNavLink>
            <MudNavLink Href="#2" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.List">Item2</MudNavLink>
            <MudNavLink Href="#3" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.List">Item3</MudNavLink>
        </MudNavGroup>

        <MudNavGroup Title="Level 1" Icon="@Icons.Material.Filled.Add">
            <MudNavLink Href="#1" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Add">Item1</MudNavLink>
            <MudNavLink Href="#2" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.List">Item2</MudNavLink>
            <MudNavLink Href="#3" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.List">Item3</MudNavLink>
        </MudNavGroup>
    }
    else
    {
        <MudMenu Dense="true" AnchorOrigin="Origin.CenterRight" TransformOrigin="Origin.CenterLeft">
            <ActivatorContent>
                <MudNavLink ActiveClass="" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.List"></MudNavLink>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem>Item1</MudMenuItem>
                <MudMenuItem>Item2</MudMenuItem>
                <MudMenuItem>Item3</MudMenuItem>
            </ChildContent>
        </MudMenu>

        <MudMenu Dense="true">
            <ActivatorContent >
                <MudNavLink ActiveClass="" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Add" />
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem>Item1</MudMenuItem>
                <MudMenuItem>Item2</MudMenuItem>
                <MudMenuItem>Item3</MudMenuItem>
            </ChildContent>
        </MudMenu>
    }

</MudNavMenu>

@code {

    [Parameter]
    public bool IsDrawerOpen { get; set; }
}