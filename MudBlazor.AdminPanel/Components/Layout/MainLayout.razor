@inherits LayoutComponentBase
@using MudBlazor.AdminPanel.Components

<MyMudThemeProvider />
<MyMudProviders />

<MudLayout>

    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@DrawerToggle" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.MudBlazor" Color="Color.Inherit" Href="https://mudblazor.com/" Target="_blank" />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Href="https://github.com/MudBlazor/MudBlazor/" Target="_blank" />
    </MudAppBar>


    <MudDrawer @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Always" Breakpoint="Breakpoint.Md" Elevation="1" Variant="@DrawerVariant.Mini">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">@_drawerHeader</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>

    <MudMainContent class="d-flex justify-center align-center mud-height-full">
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>

</MudLayout>

@code {
    bool _drawerOpen = true;
    string _drawerHeader => _drawerOpen ? "MudBlazorTemplates" : "";

    public bool DrawerOpen
    {
        get => _drawerOpen;
        set
        {
            _drawerOpen = value;

        }
    }

    void DrawerToggle() => 
        _drawerOpen = !_drawerOpen;

    void ChangeNav()
    {
        
    }

}