@inherits LayoutComponentBase
@using MudBlazor.AdminPanel.Components

<MyMudThemeProvider />
<MyMudProviders />

<MudLayout>

    <MudAppBar Elevation="1" Dense="true">
        <AppBar DrawerToggleCallback="DrawerToggle" />
    </MudAppBar>

    <AuthorizeView>
        <MudDrawer @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Always" Breakpoint="Breakpoint.Md" Elevation="1" Variant="@DrawerVariant.Mini">
            <NavMenu IsDrawerOpen="_drawerOpen"/>
        </MudDrawer>
    </AuthorizeView>


        <MudMainContent class="d-flex justify-center align-center mud-height-full">
            <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
                @Body
        </MudContainer>
    </MudMainContent>

</MudLayout>

@code {
    bool _drawerOpen = true;
    string _drawerHeader => _drawerOpen ? "MudBlazorTemplates" : "";

    public bool DrawerOpen
    {
        get => _drawerOpen;
        set
        {
            _drawerOpen = value;

        }
    }

    void DrawerToggle() =>
        _drawerOpen = !_drawerOpen;

}